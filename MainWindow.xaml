<Window x:Class="Society_Managment_System.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Society_Managment_System"
        mc:Ignorable="d"
        Title="MainWindow" Height="775" Width="800">
    <Grid Margin="40">
        <Border Background="LightGray" CornerRadius="10" Padding="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Larger Logo -->
                <Image Source="/societylogo.jpg" Width="400" Height="255" />
                <!-- Title -->
                <TextBlock Text="Sign in Your Account" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>
                <!-- Email Field -->
                <TextBlock Text="Email" FontSize="14" Margin="75,0,0,5"/>
                <TextBox Width="250" Height="30" Margin="0,0,0,10" 
                         Background="#F5F5F5" BorderThickness="0"/>
                <!-- Password Field -->
                <TextBlock Text="Password" FontSize="14" Margin="75,0,0,5"/>
                <PasswordBox Width="250" Height="30" Margin="0,0,0,10" 
                            Background="#F5F5F5" BorderThickness="0"/>
                <!-- Checkbox and Forgot Password Link -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox Content="Remember my preference" 
                              Grid.Column="0" 
                              Margin="71,0,10,0"/>
                    <TextBlock Grid.Column="1" 
                               HorizontalAlignment="Left" Margin="10,0,0,0">
                        <Hyperlink Foreground="Blue">Forgot Password?</Hyperlink>
                    </TextBlock>
                </Grid>
                <!-- Sign In Button -->
                <Button Content="Sign In" 
                        Width="250" 
                        Height="40" 
                        Background="#1A3C5E" 
                        Foreground="White" 
                        FontSize="16" 
                        Margin="0,0,0,10" 
                        BorderThickness="0"/>
                <!-- Sign Up Link -->
                <TextBlock HorizontalAlignment="Center">
                    <Run Text="Don't have an account? "/>
                    <Hyperlink Foreground="Blue">Sign up</Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</Window>
